{
  "expo": {
    "name": "My-GITAM",
    "slug": "mygitam",
    "scheme": "mygitam",
    "version": "1.3",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Allow My-GITAM to use Face ID for authentication.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"],
        "NSLocalNetworkUsageDescription": "Allow My-GITAM to access devices on your local network.",
        "NSBonjourServices": ["_bonjour._tcp", "_lnp._tcp."],
        "LSApplicationQueriesSchemes": [
         "tez",
         "phonepe",
         "paytmmp"
      ]
      },
      "bundleIdentifier": "com.gitamapps.mygitamnew",
      "googleServicesFile": "./GoogleService-Info.plist",
      "buildNumber": "8"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json",
      "package": "com.gitamapps.mygitam",
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "INTERNET",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "usesCleartextTraffic": true,
      "versionCode": 8
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",  
      "@react-native-firebase/messaging",  
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow mygitam to use Face ID."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
             
            "podfileProps": {
              "use_modular_headers!": true
            }
          }
        }
        ],
        [
        "react-native-permissions",
        {
          "ios": ["LOCAL_NETWORK"]
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "eaf38149-fa9e-4ae6-89eb-a593a9300c82"
      }
    }
  }
}
